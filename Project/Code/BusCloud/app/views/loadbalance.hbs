<link rel="stylesheet" type="text/css" href="../css/loadbalance.css">
{{> leftrail}}
<div class="right" ng-controller="loadbalanceController" data-ng-init="init()">
  <div class="heading-section">
    <h3>Load Balancing</h3>
  </div>
  {{{{raw-helper}}}}
  <div class="row">
    <div class="col-md-6">
      <h6>Load Balancing Details</h6>
      <table class="table">
        <thead>
          <tr>
            <th>Type</th>
            <th>Details</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>Server Port 1</td>
            <td>8001</td>
          </tr>
          <tr>
            <td>Server Port 2</td>
            <td>8002</td>
          </tr>
          <tr>
            <td># Of Request on Server 1</td>
            <td>{{server1}}</td>
          </tr>
          <tr>
            <td># Of Request on Server 2</td>
            <td>{{server2}}</td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-md-6">
      <h6>Recent request</h6>
      <table class="table" >
        <thead>
          <tr>
            <th>#</th>
            <th>URL</th>
          </tr>
        </thead>
        <tbody>
          <tr ng-repeat="url in urls track by $index">
            <td>{{$index + 1}}</td>
            <td>{{url}}</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  {{{{/raw-helper}}}}
</div>
<script src="../js/controllers/loadbalance.js"></script>
